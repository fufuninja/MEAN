doctype html
html.
	<head>
		<title>My Angular App!</title>
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="https://code.jquery.com/jquery-2.1.4.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
		<script src="javascripts/ang.js"></script>
	</head>
	<body ng-app="SimpleTest" ng-controller="MainCtrl">
		<script type="text/ng-template" id="/home.html">
			<div ng-repeat="post in posts | orderBy : '-upvotes' ">
			  <br>
			  Title: {{post.title}} - Upvotes: {{post.upvotes}} <button ng-click="like(post)">Like</button>
			  <br>
			  <b>Short Description</b>
			  <br>
			  {{post.description}}
			  <br>

			</div>

			<form ng-submit="addPost()">
				<input type="text" placeholder="Your title" ng-model="title"></input>
				<input type="text" placeholder="Description" ng-model="description"></input>
				<button type="submit">Post</button>
			</form>
		</script>

		<ui-view></ui-view>
		
	</body>
